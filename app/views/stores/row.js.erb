// close the modal
$("#modal-window").modal("hide");
$(".row.row-msg").fadeOut().remove();
$(".messages").fadeOut().remove();
<% if controller.action_name == "index" %>
  // Placeholder maybe when we update states belonging to countries this changes
<% elsif controller.action_name == "create" %>
  var store = <%= @store.to_json.html_safe %>;

  $('#tblStore tbody tr:first').before("<%= escape_javascript(render partial: 'row_store', locals: { store: @store} ) %>");
<% elsif controller.action_name == "update" %>
  var store = <%= @store.to_json.html_safe %>;
  // $('table#tblstore tr#'<%= @store.to_json.html_safe %>).remove();
 $("#"+ store["id"] +"").replaceWith("<%= escape_javascript(render partial: 'row_store', locals: { store: @store} ) %>");
<% elsif controller.action_name == "destroy" %>
  var store = <%= @store.to_json.html_safe %>;
  $("#"+ store["id"] +"").fadeOut("normal", function() {
      $(this).remove();
  });
<% end %>
