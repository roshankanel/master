var contents =
  "<%= escape_javascript(render partial: 'items/form', locals: {url: item_path, submit_label: 'Update', heading_prefix: 'Edit', method: 'patch'}) %>";

$("#modal-window").modal({backdrop: 'static', keyboard: false});
$("#modal-window").on('show.bs.modal', function (event) {
  var button = $(event.relatedTarget);
  var action = button.data('action')
})

$("#modal-window").html(contents);

// Listen for delete button being clicked and disable it after the
// confirm delete pane is shown
$('.confirm-delete-pane').on("shown.bs.collapse", function() {
  $("#delete").attr("disabled", "disabled");
});
