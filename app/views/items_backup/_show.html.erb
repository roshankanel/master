<!-- Modal -->
  <div class="modal-dialog  modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="modalTilte">Item Product: <%= @item.item_product %></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <div class="field-group-inline row">
          <div class="field-label col-md-3">Item Number</div>
          <div class="col-md-8"><%= @item.item_number %></div>
        </div>

        <div class="field-group-inline row">
          <div class="field-label col-md-3">Item Product</div>
          <div class="col-md-8"><%= @item.item_product %></div>
        </div>

        <div class="field-group-inline row">
          <div class="field-label col-md-3">Setup Price</div>
          <div class="col-md-8">$<%= @item.setup_price %></div>
        </div>

        <div class="field-group-inline row">
          <div class="field-label col-md-3">Unit Price</div>
          <div class="col-md-8">$<%= @item.unit_price %></div>
        </div>

        <div class="field-group-inline row" data-field="created">
          <div class="field-label col-md-3">Created at</div>
          <div class="col-md-8">
            <%= @item.created_at.to_s(:medium) %> by <%= @item.created_by %>
          </div>
        </div>
      <div class="field-group-inline row" data-field="updated">
        <div class="field-label col-md-3">Updated at</div>
        <div class="col-md-8">
          <%= @item.updated_at.to_s(:medium) %> by <%= @item.updated_by %>
        </div>
      </div>
      <div class="modal-footer">
        <div class="actions col-md-12 text-center">
          <%= button_tag 'Close', {class: "btn btn-default", "data-dismiss" => "modal", id: 'btnClose'} %>
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#btnClose').click(function() {
       $("#modal-window").modal("hide");
    });
  });
</script>
