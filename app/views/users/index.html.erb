<div class="container-fluid">
  <%= form_tag(users_path, method: 'get', id: 'search_user') do |f| %>
    <h1 class="page-header">
      Users
    </h1>
    <div class="row">
      <div class="col-sm-2">
        <%= search_field_tag :first_name, nil, class: 'form-control',
        placeholder: 'First Name', value: params[:first_name] %>
      </div>
      <div class="col-sm-2">
        <%= search_field_tag :last_name, nil, class: 'form-control',
        placeholder: 'Last Name', value: params[:last_name] %>
      </div>
      <div class="col-sm-2">
        <%= search_field_tag :email, nil, class: 'form-control',
        placeholder: 'Email', value: params[:email] %>
      </div>
      <div class="col-sm-2">
        <%= select_tag :approved, options_for_select(['True', 'False'],
        params[:approved].to_s), {prompt: "Approved", class: 'form-control selectpicker'} %>
      </div>
      <div class="col-sm-2">
          <%= submit_tag "Submit", class: 'btn btn-primary btn-md', :name => nil,
            id: 'log_submit_btn' %>
          <input type="button" value="Clear" id="clear_filter"
            class="btn btn-danger btn-md">
      </div>
    </div>
<% end %>
<br>
  <table class="table table-bordered table-hover table-striped" id="tblItem">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Approved</th>
        <th scope="col">Confirmed at</th>
        <th scope="col">Action(s)</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "row",  locals: { users: @users} %>
    </tbody>
  </table>

<div>

  <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>
  <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script type="text/javascript">
  $(document).ready(function() {
    $('#tblItem').DataTable();
  });

  </script>
