
<div class="modal-dialog  modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title" id="modalTilte">User: <%= "#{@user.first_name} " "#{@user.last_name}"  %></h1>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class='modal-body'>
      <div class="field-group-inline row">
        <div class="field-label col-md-3">Email</div>
        <div class="col-md-8"><%= @user.email %></div>
      </div>

      <div class="field-group-inline row">
        <div class="field-label col-md-3">Last Sign In</div>
        <div class="col-md-8"><%= @user.last_sign_in_at.to_s(:medium) %></div>
      </div>

      <div class="field-group-inline row">
        <div class="field-label col-md-3">Confirmed At</div>
        <div class="col-md-8">$<%= @user.confirmed_at.to_s(:medium) %></div>
      </div>


      <div class="field-group-inline row" data-field="created">
        <div class="field-label col-md-3">Created at</div>
        <div class="col-md-8">
          <%= @user.created_at.to_s(:medium) %>
        </div>
      </div>
    <div class="field-group-inline row" data-field="updated">
      <div class="field-label col-md-3">Updated at</div>
      <div class="col-md-8">
        <%= @user.updated_at.to_s(:medium) %>
      </div>
    </div>
    <div class="modal-footer">
      <div class="actions col-md-12 text-center">
        <%= button_tag 'Close', {class: "btn btn-default", "data-dismiss" => "modal", id: 'btnClose'} %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
  $('#btnClose').click(function() {
     $("#modal-window").modal("hide");
  });
});
</script>
