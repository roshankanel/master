<div class="container">
  <div class="modal-content">
    <div class="modal-header">
         <h2>Permission: <%=@permission.name %></h2>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

    </div>
    <%= render partial: 'layouts/flash_messages', locals: {:context => :modal} %>
    <div class="modal-body">
      <div class="field-group-inline">
        <div class="field-label col-md-2">Group</div>
        <div class="field-content col-md-8">
          <%= @permission.group_name %>
        </div>
      </div>

      <div class="field-group-inline">
        <div class="field-label col-md-2">Name</div>
        <div class="field-content col-md-8">
          <%= @permission.name %>
        </div>
      </div>

      <div class="field-group-inline">
        <div class="field-label col-md-2">Description</div>
        <div class="field-content col-md-8">
          <%= @permission.description %>
        </div>
      </div>

      <div class="field-group-inline">
        <div class="field-label col-md-2">Attached Role(s)</div>
        <div class="field-content col-md-8">
          <%= @assigned_roles %>
        </div>
      </div>

      <div class="field-group-inline">
        <div class="field-label col-md-2">Created at</div>
        <div class="field-content col-md-8">
          <%= @permission.created_at.to_s(:medium) %> by <%= @permission.created_by %>
        </div>
      </div>

      <div class="field-group-inline">
        <div class="field-label col-md-2">Updated at</div>
        <div class="field-content col-md-8">
          <%= @permission.updated_at.to_s(:medium) %> by <%= @permission.updated_by %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <div class="actions col-md-12 text-center">
        <%= button_tag 'Close', {class: "btn btn-default", "data-dismiss" => "modal"} %>
      </div>
    </div>
  </div>
</div>
